@model IEnumerable<Virtualizer.Models.UserAnswerToQuestion>

@{
    ViewBag.Title = "List";
}

<h2>List questions answered</h2>

<table class="table">
    <tr>
        <th>
            Question created by
        </th>
        <th>
            Question
        </th>
        <th>
            Answer
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionForUsers.UserForQuestion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionForUsers.Question)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserAnswer)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.UserAnswerID })
        </td>
    </tr>
}

</table>
