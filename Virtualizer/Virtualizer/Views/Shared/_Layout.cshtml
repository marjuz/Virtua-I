<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>@ViewBag.Title - Virtual I project</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap.css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body >
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("canEdit"))
                    {
                        @Html.ActionLink("Virtualizer", "Index", "Admin", new { area = "" }, new { @class = "Logo" })

                    }
                    else
                    {
                        @Html.ActionLink("Virtualizer", "Index", "Cm", new { area = "" }, new { @class = "Logo" })
                    }
                }
                else
                {
                  @Html.ActionLink("Virtualizer", "Index", "Home", new { area = "" }, new { @class = "Logo" })

                }
                 
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@if (User.Identity.IsAuthenticated)
                    {
                        }
                        else
                        {@Html.ActionLink("Contacts", "Contact", "Home")
                        }
             
                    </li>
                    <li> @if (User.Identity.IsAuthenticated )
                    {
                    }
                         else
                         {
                             @Html.ActionLink("Help", "About", "Home")}
                              </li>
            
                    <li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @Html.ActionLink("Profile", "List", "Cm", new { area = "" }, new { @class = "nav navbar-nav" })
                        }
                    </li>
                    <li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @Html.ActionLink("Connections", "Connections", "Home", new { area = "" }, new { @class = "nav navbar-nav" })
                        }
                    </li>
                    <li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @Html.ActionLink("BackPack", "BackPack", "Home", new { area = "" }, new { @class = "nav navbar-nav" })
                        }
                    </li>
                    <li>
                      @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("canEdit"))
                            {
                                  @Html.ActionLink("Users page", "Index", "Cm", new { area = "" }, new { @class = "navbar-brand" })

                             }

                         }
                    </li>
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("canEdit"))
    {
        <div class="admins">You are Admin</div>
    }
}

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - VirtualI</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>